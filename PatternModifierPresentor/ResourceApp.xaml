<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ViewModels="clr-namespace:PatternModifierUI.ViewModels"
                    xmlns:Views="clr-namespace:PatternModifierUI.Views">


    <DataTemplate DataType="{x:Type ViewModels:LinePatternStyleViewModel}">
        <Views:LinePatternStylesView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:BottomViewModel}">
        <Views:BottomView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:UpdateBottomViewModel}">
        <Views:UpdateBottomView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:UpdateViewModel}">
        <Views:UpdateView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModels:ProgressBarViewModel}">
        <Views:ProgressView/>
    </DataTemplate>
  
    <Style TargetType="Button" x:Key="RoundButton">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>

    
</ResourceDictionary>